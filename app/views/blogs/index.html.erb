<p id="notice"><%= notice %></p>

<div class ="blogs">
  <h1>Blogs</h1>
</div>

<br>
<article class="container">
  <table class="row">
    <thead>
      <tr>
        <th class="col-xs-3 col-md-3">Date</th>
        <th class="col-xs-3 col-md-3">Title</th>
        <th class="col-xs-4 col-md-4">Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td class="col-xs-3 col-md-3"><%= blog.date %></td>
          <td class="col-xs-3 col-md-3"><%= blog.title %></td>
          <td class="col-xs-3 col-md-4"><%= blog.content %></td>
          <td><button class="btn btn-success"><%= link_to 'Show', blog %></button></td>
            <% if blog.user_id == current_user.id %>
              <td><button class="btn btn-info"><%= link_to 'Edit', edit_blog_path(blog) %></button></td>
              <td><button class="btn btn-warning"><%= link_to 'Del', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td></button>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</article>

<br>

<a class= "btn btn-primary" href= "blogs/new" role="button">new blog</a>
<button class="btn btn-warning"><%= link_to "Profile", user_path(current_user.id) %></button>
